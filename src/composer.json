{
  "require": {
    "php": "^8.2",
    "roots/acorn": "^v4.3.0",
    "roots/wp-config": "^1.0",
    "sniccowp/php-scoper-wordpress-excludes": "^6.5"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.8",
    "fzaninotto/faker": "^1.5",
    "laravel/pint": "^1.17.2",
    "phpstan/phpstan": "^1.11.11",
    "spatie/laravel-ignition": "^2.8.0",
    "szepeviktor/phpstan-wordpress": "^1.3.5"
  },
  "autoload": {
    "psr-4": {
      "WordpressPluginTemplate\\App\\": "app/",
      "WordpressPluginTemplate\\Database\\Factories\\": "database/factories/",
      "WordpressPluginTemplate\\Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WordpressPluginTemplate\\Tests\\": "tests/"
    }
  },
  "post-autoload-dump": [
    "Roots\\Acorn\\ComposerScripts::postAutoloadDump"
  ],
  "scripts": {
    "lint": "./vendor/bin/pint",
    "prefix": "php -d memory_limit=-1 ./tools/php-scoper add-prefix",
    "test:lint": "./vendor/bin/pint --test",
    "test:types": "APP_RUNNING_IN_CONSOLE=false ./vendor/bin/phpstan analyse --memory-limit 1G"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true
    }
  }
}
