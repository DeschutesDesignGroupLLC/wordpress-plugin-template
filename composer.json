{
    "require": {
        "php": "^8.1",
        "roots/acorn": "^3.2"
    },
    "require-dev": {
        "spatie/laravel-ignition": "^1.6",
        "fzaninotto/faker": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "WordpressPluginTemplate\\App\\": "yourplugin/app",
            "WordpressPluginTemplate\\Database\\Factories\\": "yourplugin/app/database/factories/",
            "WordpressPluginTemplate\\Database\\Seeders\\": "yourplugin/app/database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "yourplugin/app/tests/"
        }
    },
    "post-autoload-dump": [
        "Roots\\Acorn\\ComposerScripts::postAutoloadDump"
    ],
    "config": {
        "vendor-dir": "src/vendor"
    }
}
